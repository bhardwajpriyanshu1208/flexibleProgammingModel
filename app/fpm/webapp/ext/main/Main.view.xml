<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
    xmlns:f="sap.f" xmlns:macros="sap.fe.macros" xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="scm.nxt.fpm.fpm.ext.main.Main">
    <f:DynamicPage id="FilterBarDefault" class="sapUiResponsiveContentPadding">
        <f:title>
            <f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
                <f:heading>
                    <Title id="_IDGenTitle1" text="Filter Bar" level="H2" />
                </f:heading>
                <f:snappedContent>
                    <Panel headerText="Highest Price Tiles">
                        <HeaderContainer
                            content='{path:"/Travel" , parameters: {$orderby : "TotalPrice desc"}}'>
                            <GenericTile header="Travel {TravelID}" subheader="{Description}"
                                press="{handlers.onTilePress}">
                                <TileContent unit="{CurrencyCode_code}">
                                    <NumericContent value="{TotalPrice}" valueColor="Good">
                                    </NumericContent>
                                </TileContent>
                            </GenericTile>
                        </HeaderContainer>
                    </Panel>
                    <Panel headerText="Filter Count">
                        <Text text="{fbConditions>/filtersTextInfo}" />
                    </Panel>
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
                <VBox id="_IDGenVBox1">
                    <macros:FilterBar id="FilterBar"
                        metaPath="@com.sap.vocabularies.UI.v1.SelectionFields"
                        filterChanged=".handlers.onFiltersChanged" />
                </VBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <macros:Table id="Table" metaPath="@com.sap.vocabularies.UI.v1.LineItem"
                headerVisible="true" isSearchable="true" selectionMode="Single"
                type="ResponsiveTable" variantManagement="None" filterBar="FilterBar" />
        </f:content>
    </f:DynamicPage>
</mvc:View>